<!DOCTYPE html>
<html>

<head>
	<title>Note Keeper App</title>
	<style>
		.wrapper{
			font-family: "Lucida Console", "Courier New", monospace;
			margin-bottom: 40px;

		}
		textarea{
			padding: 10px;
			margin-bottom: 15px;
		}
		.btn{
			margin:0px 80px 0px 80px;
			border-radius: 8px;
			background-color: #fff;
			border: 2px solid #000;
			padding: 5px 10px 5px 10px;
		}
		.my-form{
			margin-right: 20px;
		}
	</style>
</head>

<body>
	<div class="wrapper">
	<h1>Note Keeper App</h1>

	<div style="display: flex;">

		<% data.forEach(element=> { %>

			<form action="/update" method="post">
				<input type="number" style="display: none;"
					name="noteId" value="<%= element.noteId %>">
				<textarea type="text" rows="6" cols="30"
						placeholder="Type Here..." name="noteContent"
					value="<%= element.noteContent %>">
					<%= element.noteContent %></textarea>
				<br>
				<button type="submit" class="btn">Update</button>
			</form>

			<form action="/delete" method="post" class="my-form">
				<input type="number" style="display: none;"
					name="noteId" value="<%= element.noteId %>">
				<button type="submit"
						style="margin: 0px 4px;">âœ•</button>
			</form>
			<% }) %>
	</div>
</div>

	<div class="wrapper">
	<h1>Add Note</h1>
	<form action="/" method="post">
		<input type="number" style="display: none;"
			name="noteId">
		<textarea type="text" rows="6" cols="30"
				placeholder="Type Here..."
				name="noteContent"></textarea>
		<br>
		<button type="submit" class="btn">Add</button>
	</form>
</div>
</body>

</html>